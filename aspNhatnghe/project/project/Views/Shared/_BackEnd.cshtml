<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <style>
        .nn-header {
            height: 170px;
            border: 1px solid green;
            position: relative;
        }

        .nn-company {
            position: absolute;
            top: 45px;
            left: 20px;
            text-shadow: 0 0 4px black;
        }

        .nn-slogan {
            position: absolute;
            top: 95px;
            left: 20px;
            border-top: 1px dotted blue;
        }

        .nn-sheet {
            min-height: 400px;
            box-shadow: 0 0 5px lightgray;
            border: 1px dashed green;
            margin: 0 3px;
            border-radius: 5px;
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header class="nn-header">
            <h1 class="nn-company">Nhất Nghệ Shop</h1>
            <h5 class="nn-slogan">Mua may, bán đắt, Lợi ích mọi người</h5>
        </header>

        <!--Menu ngang-->
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" href="#">NNShop</a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!--Navbar link-->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            Quản lý
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="HangHoas">Hàng hóa</a>
                            <a class="dropdown-item">Nhà cung cấp</a>
                            <a class="dropdown-item">Chủng loại</a>
                            <a class="dropdown-item">Khách hàng</a>
                            <a class="dropdown-item">Hóa đơn</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            Thành viên
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Đăng nhập</a>
                            <a class="dropdown-item" href="#">Đăng ký</a>
                            <a class="dropdown-item" href="#">Quên mật khẩu</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Tài khoản</a>
                            <a class="dropdown-item" href="#">Đăng xuất</a>
                        </div>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                        </a>
                    </li>
                </ul>
            </div>
        </nav><!--/End Menu ngang-->
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
@RenderSection("Scripts", required: false)