@{
    ViewData["Title"] = "Home Page";
}

// list
@using Microsoft.EntityFrameworkCore;
@{
    eStore20Context db = new eStore20Context();
    List<Loai> ds3LoaiNN = db.Loai.FromSql("SELECT TOP 3 * FROM Loai ORDER BY NEWID()").ToList();


}

@foreach (Loai lo in ds3LoaiNN)
{
    List<HangHoa> ds5HangHoa = db.HangHoa.FromSql("SELECT TOP 3 * FROM HangHoa ORDER BY NEWID()").ToList();
    <div class="col-md-4">
        @lo.TenLoai
        @foreach (HangHoa sanpham in ds5HangHoa)
        {
            <a class="list-group-item">@sanpham.TenHh</a>
        }
    </div>

}




@{
    var top5GiamGia = ViewBag.Top5GiamGia;
    var top10NgauNhien = ViewBag.Top10NgauNhien;
}

<h2>Top 5 Giam Gia </h2>
<div class="row">


    @foreach (HangHoa sanpham in top5GiamGia)
    {
        await Html.RenderPartialAsync("_hanghoa", sanpham);
    }

</div>
<h2>Top 10 Ngau Nhien</h2>
<div class="row">

    @foreach (HangHoa sanpham in top10NgauNhien)
    {
        await Html.RenderPartialAsync("_hanghoa", sanpham);
    }
</div>









